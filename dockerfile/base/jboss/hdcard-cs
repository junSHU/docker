FROM dockerhub.hd123.com/jre-alpine:6

RUN apk add --no-cache curl && \
	mkdir -p /opt/heading/ && \
    curl "http://download.hd123.com/TmpFiles/TA/20170513/jboss-hdcard-as-cs.tar.gz" | tar xz -C /opt/heading/ && \
    chmod +x /opt/heading/cs/bin/run.sh && \
	apk del curl && \
	rm -rf /var/cache/apk/*
#EXPOSE 8380 1399
ENTRYPOINT ["/opt/heading/cs/bin/run.sh","-b","0.0.0.0"]
